<SettingsScreen>:
    md_bg_color: self.theme_cls.secondaryContainerColor
    name: "settings_screen"

    MDLabel:
        text: "Settings"
        halign: "center"
        pos_hint: {"top": 1}
        size_hint_y: None
        height: dp(56)
        padding: dp(10)

    ScrollView:
        id: scroll_container
        do_scroll_y: True
        adaptive_height: True
        bar_width: dp(10)

        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(15)
            padding: dp(20)
            pos_hint: {"top": 1}
            size_hint_y: None
            adaptive_height: True


            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                size_hint_y: None
                height: dp(56)
                pos_hint: {'center_x': .5, 'center_y': .5}
                
                MDLabel:
                    text: "Light/Dark Theme"
                    halign: "left"

                MDSwitch:
                    id: dark_mode_switch
                    ripple_effect: False
                    icon_active: "check"
                    icon_active_color: "white"
                    thumb_color_active: "green"
                    on_active: app.set_dark_mode(*args)
